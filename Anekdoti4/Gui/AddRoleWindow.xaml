<Window x:Class="Anekdoti.Gui.AddRoleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Anekdoti.Gui"
        mc:Ignorable="d"
        Title="Добавить роль" Height="164" Width="200" ShowInTaskbar="False" ResizeMode="NoResize">
    <Grid>
        <TextBox x:Name="RoleName" HorizontalAlignment="Center" Margin="0,34,0,0" TextWrapping="Wrap" Text="(именование должности)" VerticalAlignment="Top" Width="179" Height="18"/>
        <Label Content="Должность:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="24"/>
        <Button x:Name="bCancel" Content="Отмена" HorizontalAlignment="Left" Margin="132,69,0,0" VerticalAlignment="Top" Width="58" Click="OnCancelEv"/>
        <Button x:Name="bAdd" Content="Добавить" HorizontalAlignment="Left" Margin="10,69,0,0" VerticalAlignment="Top" Click="OnRoleAdd"/>

    </Grid>
</Window>
